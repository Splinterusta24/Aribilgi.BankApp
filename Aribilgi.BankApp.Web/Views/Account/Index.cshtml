@model ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-3">

    <div class="col-md-6">

        <h3>Kullanıcı Bilgileri</h3>
        <p> Kullanıcının Adı:@Model.Name</p>
        <p> Kullanıcının Soyadı:@Model.Surname</p>
        <p> Kullancının Hesap Sayısı:<getAccountCount application-user-id="@Model.Id"></getAccountCount></p>

    </div>



    <div class="col-md-6">

        <h3>Yeni Hesap Ekle</h3>
        <form action="/Account/Create" method="post">
            <div class="mb-3 form-group">
                <label>Hesap Numarası</label>
                <input type="number" name="AccountNumber" class="form-control" />
            </div>

            <div class="mb-3 form-group">
                <label>Hesap Bakiyesi</label>
                <input type="number" name="Balance" class="form-control" />
            </div>

            <input name="ApplicationUserId" value="@Model.Id" class="d-none" />
            <div class="mb-3 form-group">
                <button type="submit" class="btn-success">Hesap Oluştur</button>

            </div>
        </form>

    </div>

    <div class="col-12">

        <h3>Kullanıcı Hesapları</h3>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Hesap Sahibi</th>
                    <th>Hesap Bakiyesi</th>
                </tr>

            </thead>
            <tbody>
                @{
                    foreach (Account item in Model.Accounts)
                    {

                            <tr>
                                <td>@item.AccountNumber</td>
                                <td>@item.Balance</td>
                                <td> <a class="btn btn-success" > Transfer Et</a></td>


                            </tr>
                    }
                    }
                    </tbody>


                </table>

            </div>
        </div>

        <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

                  